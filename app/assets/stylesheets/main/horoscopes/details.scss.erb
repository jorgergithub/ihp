.horoscopes #details {
  p {
    color: #8590a1;
  }

  h1 {
    font-weight: 300;
    color: #af00a5;
  }

  time {
    color: #5d687a;
    font-weight: 400;
  }

  aside h1 {
    color: #5d687a;
  }

  div.horoscopes_row {
    font-size: 0px;
    margin: 100px 0px;
  }

  div.horoscopes_row article {
    vertical-align: top;
    width: 468px;
    display: inline-block;
    font-size: 20px;
  }

  div.horoscopes_row article + article {
    margin-left: 30px;
  }
}

.horoscopes #details div.horoscopes_sign {
  display:none;

  &.horoscope_selected {
    display: block;
  }

  h1 {
    font-size: 35px;
  }

  time {
    font-size: 24px;
  }

  p {
    margin-top: 40px;
    font-size: 20px;
  }
}

.horoscopes #details article.compatibility {
  text-align: center;

  h1 {
    font-size: 25px;
    margin-bottom: 50px;
  }

  img + img {
    margin-left: 30px;
  }
}