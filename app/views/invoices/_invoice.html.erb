<table class="table table-hover">
  <thead>
    <tr>
      <th>Number</th>
      <th>Psychic</th>
      <th>Period</th>
      <th>Created</th>
      <th>Total</th>
    </tr>
  </thead>
  <tbody>
    <% invoices.each do |invoice| %>
      <tr>
        <td>
          <%= link_to invoice.number, psychic_invoice_path(invoice) %>
        </td>
        <td>
          <%= invoice.psychic.full_name %>
        </td>
        <td>
          <%=l invoice.start_date, format: :short %> to
          <%=l invoice.end_date, format: :short %>
        </td>
        <td>
          <%=l invoice.created_at, format: :short %>
        </td>
        <td class="right">
          <%= number_to_currency invoice.total %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
