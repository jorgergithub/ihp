<div class="row-fluid">
  <div class="span12">
    <h3>Reset PIN</h3>
  </div>
  <div class="span12">
    <%= form_for(@client, url: reset_pin_client_path,  html: { class: 'form form-inline' }) do |f| %>
      <form class="form-inline">
        <%= f.text_field :pin, class: "input-small", placeholder: "New PIN", data: { mask: "9999" }, autofocus: "true" %>
        <%= f.submit "Reset", class: "btn" %>
        <%= link_to "Cancel", client_path, class: "btn" %>
      </form>
    <% end %>
  </div>
</div>
