<div class="row-fluid">
  <div class="span12">
    <h3>Add dollars</h3>
  </div>
  <div class="span12">
    <%= form_for(@client, url: add_credits_client_path,  html: { class: 'form form-inline' }) do |f| %>
      <form class="form-inline">
        <%= f.text_field :credits, class: "input-small", placeholder: "Dollars", autofocus: "true" %>
        <%= f.submit "Add", class: "btn" %>
        <%= link_to "Cancel", client_path, class: "btn" %>
      </form>
    <% end %>
  </div>
</div>
