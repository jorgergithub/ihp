<div class="row-fluid">
  <div class="span8">
    <h3>Accountants</h3>

    <% if @accountants.any? %>
      <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th>Username</th>
            <th>Name</th>
            <th>Email</th>
            <th>Created</th>
          </tr>
        </thead>
        <tbody>
          <% @accountants.each do |wa| %>
            <tr>
              <td class="admin-actions">
                <%= link_to '<i class="icon-edit"></i>'.html_safe, edit_admin_accountant_path(wa) %>
                <%= link_to '<i class="icon-remove"></i>'.html_safe, [:admin, wa], data: {confirm: "Are you sure?" }, :method => "delete" %>
              </td>
              <td><%= link_to wa.username, edit_admin_accountant_path(wa) %></td>
              <td><%= wa.full_name %></td>
              <td><%= wa.email %></td>
              <td><%=l wa.created_at, format: :short %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <%= paginate @accountants %>

    <% else %>
      <div class="blank-state">
        No accountants added yet.
        <%= link_to "Add one now.", new_admin_accountant_path %>
      </div>
    <% end %>
    <%= link_to "Add new accountant", new_admin_accountant_path, class: "btn btn-small" %>
  </div>
</div>
