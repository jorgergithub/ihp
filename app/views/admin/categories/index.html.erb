<div class="row-fluid">
  <div class="span12">
    <h3>FAQs Categories</h3>

    <% if @categories.any? %>
      <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th>Category Name</th>
            <th>FAQs</th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |cat| %>
            <tr>
              <td class="admin-actions">
                <%= link_to '<i class="icon-edit"></i>'.html_safe, edit_admin_category_path(cat) %>
                <%= link_to '<i class="icon-remove"></i>'.html_safe, [:admin, cat], data: {confirm: "Are you sure?" }, :method => "delete" %>
              </td>
              <td><%= link_to cat.name, edit_admin_category_path(cat) %></td>
              <td><%= cat.faqs.count %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <%= paginate @categories %>

    <% else %>
      <div class="blank-state">
        No FAQ Category added yet.
        <%= link_to "Add one now.", new_admin_category_path %>
      </div>
    <% end %>
    <%= link_to "Add new FAQ Category", new_admin_category_path, class: "btn btn-small" %>
  </div>
</div>
