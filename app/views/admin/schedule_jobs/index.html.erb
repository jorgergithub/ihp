<div class="row-fluid">
  <div class="span8">
    <h3>Scheduled Jobs</h3>

    <% if @schedule_jobs.any? %>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Description</th>
            <th>Week Day</th>
            <th>At</th>
          </tr>
        </thead>
        <tbody>
          <% @schedule_jobs.each do |schedule_job| %>
            <tr>
              <td><%= link_to schedule_job.description, edit_admin_schedule_job_path(schedule_job) %></td>
              <td><%= schedule_job.week_day_humanize %></td>
              <td><%= schedule_job.at %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <%= paginate @schedule_jobs %>

    <% else %>
      <div class="blank-state">
        No jobs scheduled yet.
      </div>
    <% end %>
  </div>
</div>
