<%= form_for([:admin, object], :html => { :class => 'form form-horizontal' }) do |f| %>
  <%= render 'errors', object: object %>

  <div class="control-group">
    <%= f.label :name, "Name", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, autofocus: true %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :credits, "Dollars", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :credits %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :price, "Price", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :price %>
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
      <label class="checkbox">
        <%= f.check_box :active %> Active
      </label>
      <label class="checkbox">
        <%= f.check_box :phone %> Phone offer
      </label>
    </div>
  </div>

  <%= f.submit "Save", class: "btn" %>
  <%= link_to "Cancel", admin_packages_path, class: "btn" %>
<% end %>
