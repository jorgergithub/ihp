<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => 'form' }) do |f| %>
  <div><%= f.label :login, "Username / Telephone / Email Address" %>
  <%= f.text_field :login, :autofocus => true %></div>

  <div><%= f.label :password %>
  <%= f.password_field :password %></div>

  <% if devise_mapping.rememberable? -%>
    <div>
      <label class='checkbox'>
        <%= f.check_box :remember_me %> Remember me
      </label>
    </div>
  <% end -%>

  <div><%= f.submit "Sign in", :class => 'btn' %></div>
<% end %>

<%= render "devise/shared/links" %>
