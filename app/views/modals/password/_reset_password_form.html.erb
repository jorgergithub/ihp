<%= form_for(resource, :as => resource_name, remote: true, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>

  <%= render "shared/form_validation_errors", model: resource %>

  <%= f.hidden_field :reset_password_token %>

  <div class="row">
    <div class="field">
      <%= f.label :password, "New password" %><br />
      <%= f.password_field :password, :autofocus => true %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "Confirm new password" %><br />
      <%= f.password_field :password_confirmation %>
    </div>
  </div>

  <footer>
    <%= image_submit_tag "modal/save_password_button.png" %>
    <%= link_to image_tag("modal/cancel_btn.png"), root_url, :class => 'close-button' %>
  </footer>
<% end %>
